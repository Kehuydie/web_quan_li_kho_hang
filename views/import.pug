doctype html
html
  head
    title #{title}
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    link(rel="stylesheet", href="/css/product.css")
  body
    button.btn.btn-primary.position-fixed.top-0.start-0.m-3.z-3(type="button", data-bs-toggle="offcanvas", data-bs-target="#sidebarMenu")
        i.bi.bi-list.me-1
        | >
    .offcanvas.offcanvas-start(id="sidebarMenu", tabindex="-1")
        .offcanvas-header
            h5.offcanvas-title Menu
            button.btn-close(type="button", data-bs-dismiss="offcanvas")
        .offcanvas-body
            ul.nav.flex-column.nav-pills
                li.nav-item
                    a.nav-link(href="/product") Sản phẩm
                li.nav-item
                    a.nav-link(href="/supplier") Nhà cung cấp
                li.nav-item
                    a.nav-link(href="/import") Phiếu nhập
                li.nav-item
                    a.nav-link(href="/import/create") Tạo phiếu nhập
                li.nav-item
                    a.nav-link(href="/export") Phiếu xuất
                li.nav-item
                    a.nav-link(href="/export/create") Tạo phiếu xuất
    h1.text-center Danh sách phiếu nhập 

    table.table.table-striped.table-bordered.table-hover
        thead.table-success
            tr
                th check
                th ID phiếu nhập 
                th ID nhà cung cấp 
                th ngày nhập
                th tổng tiền
                th note
                th Trạng thái
        tbody
            each importorder in getimportorder
                tr
                    td 
                        input(type="checkbox",value=`${importorder.import_id}`,name="proid[]",class="itemcheckbox")
                    td= importorder.import_id
                    td= importorder.supplier_id
                    td= importorder.import_date || 'Chưa có'
                    td= importorder.total_amount
                    td= importorder.notes
                    td 
                        if importorder.status === 'approved'
                            span.badge.bg-success approved
                        else if importorder.status === 'pending'
                            span.badge.bg-secondary Pending
                        else if importorder.status === 'cancelled'
                            span.badge.bg-secondary Cancelled
                        else
                            span.badge.bg-warning Chưa rõ


button.btn.btn-danger(data-bs-toggle="modal", data-bs-target="#deleteimportorderModal") Xóa phiếu nhập đã chọn 
button.btn.btn-info.view-detail-btn(type="button") Xem chi tiết

form#deleteForm(action="", method="POST")
  .modal.fade#deleteimportorderModal(tabindex="-1")
    .modal-dialog
      .modal-content
        .modal-header
          h5.modal-title Xác nhận xóa
        .modal-body
          p Bạn có chắc muốn xóa phiếu nhậpnhập?
          input(type="hidden", name="")
        .modal-footer
          button.btn.btn-secondary(type="button", data-bs-dismiss="modal") Hủy
          button.btn.btn-danger(type="submit") Xác nhận

div.modal.fade#importDetailModal(tabindex="-1")
  div.modal-dialog.modal-lg
    div.modal-content
      div.modal-header
        h5.modal-title Chi tiết phiếu nhập
        button.btn-close(type="button", data-bs-dismiss="modal")
      div.modal-body
        table.table.table-bordered
          thead
            tr
              th STT
              th Tên SP
              th mã phiếu
              th Số lượng
              th Đơn giá
          tbody#importDetailTableBody
        p.text-end
          strong Tổng tiền: 
          span#totalAmount 


script(src="/script/import.js") 
